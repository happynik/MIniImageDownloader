<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MIniImageDownloader"
                    xmlns:p="clr-namespace:MIniImageDownloader.Properties"
                    xmlns:view_model="clr-namespace:MIniImageDownloader.ViewModel"
                    xmlns:tb="http://www.hardcodet.net/taskbar">
    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="Загрузить изображение" Command="{Binding DownloadImageCommand}" />
        <Separator />
        <MenuItem Header="Выход" Command="{Binding ExitApplicationCommand}" />
    </ContextMenu>

    <tb:TaskbarIcon x:Key="TaskBarIcon"
                    IconSource="/Red.ico"
                    ToolTipText="MiniImageDownloader"
                    DoubleClickCommand="{Binding ShowWindowCommand}"
                    ContextMenu="{StaticResource SysTrayMenu}"
                    >
        <!--DataContext="{Binding Source={StaticResource Locator}, Path=TaskBarViewModel}"-->

        <!--<tb:TaskbarIcon.DataContext>
            <Binding Source="{StaticResource Locator}" Path="TaskBarViewModel"/>
        </tb:TaskbarIcon.DataContext>-->
    </tb:TaskbarIcon>
</ResourceDictionary>